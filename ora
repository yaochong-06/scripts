  if [ "$2" = "" ]; then
    topn=5
  else
    topn=$2
  fi

    echo "show top $topn ospid detail info:"
    cnt=0
    top -u oracle  -n 1 -b -c |head -50|grep LOCAL|head -$topn|awk '{print $1}' >pids.log
    while read pid
    do
