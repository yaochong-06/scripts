  if [ "$2" = "" ]; then
   
  read -p "Please input pid(v#proces.spid where v#session.paddr=v#process.addr):" pid
        if [ -z "${pid}" ];then
             echo "input error"
             exit 1
        fi
   else 
     pid=$2
  fi

