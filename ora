           query=\"where sample_time between to_date\(\'$2\',\'yyyy/mm/dd hh24:mi:ss\'\) and to_date\(\'$2\',\'yyyy/mm/dd hh24:mi:ss\'\)+$3/24\" \
           file=expdash_$filedate.dmp version=12.1
