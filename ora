if [ "$1" = "bc" ]; then

     if [ "$2" = "" ]; then
      top=10
     else 
      top=$2
     fi

  sqlplus -s /NOLOG << ! | egrep -v "Session altered|Connected|rows selected"

    connect $DBUSER

    set pagesize 10000
    set linesize 80

    select * from (
      select /*+ ordered use_hash(obj\$ v\$bh) */owner#, name, count(*) "Buffer Count"
      from obj\$ o, v\$bh b
      where o.dataobj# = b.objd
        and b.status != 'free'
      group by owner#,o.name
      order by 3 desc)
    where rownum <= $top ;
    $ECHO

!
echo "Top $top Buffer Count."
exit 0
fi

